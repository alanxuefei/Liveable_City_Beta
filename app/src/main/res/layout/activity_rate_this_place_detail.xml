<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/location"
                    android:layout_margin="5dp" />

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="76dp"
                    android:layout_height="60dp"
                    android:id="@+id/progressBar_locationname"
                    android:layout_marginBottom="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Detecting Location"
                    android:id="@+id/textView_locationname"
                    android:layout_weight="0.35"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:onClick="clickImage_locationname" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"

                android:layout_marginTop="5dp"
                android:layout_weight="0.92">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="This place makes me feel:"
                    android:id="@+id/textView" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/radioGroup1"
                        android:onClick="clickRadio_group1"
                        android:clickable="true">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton1"
                            android:onClick="clickimage_happyface" />

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/happyface"
                            android:id="@+id/imageView1"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickimage_happyface"

                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton2"
                            android:onClick="clickimage_unhappyface" />

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/unhappyface"
                            android:id="@+id/imageView2"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickimage_unhappyface"

                            />
                    </RadioGroup>

                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/radioGroup2"
                        android:onClick="clickRadio_group2"
                        android:clickable="true">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton3"
                            android:onClick="clickimage_surprisedface" />

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/surprisedface"
                            android:id="@+id/imageView3"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickimage_surprisedface"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton4"
                            android:onClick="clickimage_funnyface" />

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/funnyface"
                            android:id="@+id/imageViewfunnyface"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickimage_funnyface"/>
                    </RadioGroup>

                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/radioGroup3"
                        android:onClick="clickRadio_group3"
                        android:clickable="true">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton5"
                            android:onClick="clickimage_angryface" />

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/angryface"
                            android:id="@+id/imageViewangryface"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickimage_angryface"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton6"
                            android:onClick="clickimage_dislikeface" />

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="100dp"
                            android:src="@drawable/dislikeface"
                            android:id="@+id/imageViewdislikeface"
                            android:focusable="false"
                            android:clickable="true"
                            android:onClick="clickimage_dislikeface"/>
                    </RadioGroup>

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="5dp">
               <!-- CLEANNESS:-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="CLEANNESS: "
                        android:id="@+id/textView4"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/textViewCLEANNESS" />

                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:id="@+id/ratingBarCLEANNESS"
                    android:clickable="true" />
                <!--  SAFTY-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="SAFTY: "
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/textViewSAFTY" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:id="@+id/ratingBarSAFTY"
                    android:clickable="true" />

                <!-- BEAUTIFULNESS-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="BEAUTY: "
                        android:id="@+id/textView5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/textViewBEAUTIFULNESS" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:id="@+id/ratingBarBEAUTIFULNESS"
                    android:clickable="true" />



                <!-- GREENNESS-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="GREENNESS: "
                        android:id="@+id/textViewGREENNESS0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/textViewGREENNESS" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:id="@+id/ratingBarGREENNESS"
                    android:clickable="true" />
                <!-- FRIENDLINESS-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="FRIENDLINESS: "
                        android:id="@+id/textViewFRIENDLINESS0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/textViewFRIENDLINESS" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:id="@+id/ratingBarFRIENDLINESS"
                    android:clickable="true" />
                <!-- INTERESTINGNESS-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="CONVENIENCE: "
                        android:id="@+id/textViewCONVENIENCE0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text=""
                        android:id="@+id/textViewCONVENIENCE" />
                </LinearLayout>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:id="@+id/ratingBarCONVENIENCE"
                    android:clickable="true" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:id="@+id/imageView_takeapicture"
                    android:src="@drawable/tap_here_to_take_a_picture"
                    android:layout_gravity="left"
                    android:onClick="clickImage_takeapicture" />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView_picture"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/AutoCompleteTextView_Commentary"
                android:layout_weight="0.28"

                android:hint="Write a comment..."

                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/button"
                android:onClick="clickButton_submit"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

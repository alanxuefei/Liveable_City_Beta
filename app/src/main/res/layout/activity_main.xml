<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="3">


        <ImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:id="@+id/imageView_rate_this_place"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:onClick="clickImage"
            android:src="@drawable/rate_this_place" />

        <ImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:id="@+id/imageView_sensordashboard"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/sensordashboard" />

        <ImageView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:id="@+id/activity_log"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/activity_log" />

    </GridLayout>
</RelativeLayout>
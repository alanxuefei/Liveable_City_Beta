<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="#2E8DEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView8" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="228dp"
                android:layout_height="275dp"
                android:id="@+id/imageView_rate_this_place"
                android:layout_row="0"
                android:layout_column="0"


                android:clickable="true"
                android:onClick="clickImage_rate_this_place"
                android:src="@drawable/rate_this_place"
                android:layout_weight="0.32" />


        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="152dp"
                android:layout_height="163dp"
                android:id="@+id/visitedplaces"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_activity_log"
                android:src="@drawable/visitedplaces"
                android:cropToPadding="false" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:id="@+id/reward"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_myreward"
                android:src="@drawable/myreward"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User ID: Alan"
                android:id="@+id/textView_UserID" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
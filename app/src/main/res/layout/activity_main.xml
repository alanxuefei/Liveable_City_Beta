<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:id="@+id/imageView_rate_this_place"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_rate_this_place"
                android:src="@drawable/rate_this_place" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:id="@+id/imageView_sensordashboard"
                android:layout_row="0"
                android:layout_column="1"
                android:clickable="false"
                android:onClick="clickImage_sensordashboard"
                android:src="@drawable/sensordashboard" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:id="@+id/activity_log"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_activity_log"
                android:src="@drawable/activity_log" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:id="@+id/my_mood"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:onClick="clickImage_my_mood"
                android:src="@drawable/my_mood" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:id="@+id/sound_analyzer"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="false"
                android:onClick="clickImage_sound_analyzer"
                android:src="@drawable/sound_analyzer" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:id="@+id/reward"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="false"
                android:onClick="clickImage_reward"
                android:src="@drawable/reward" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>